{
  "compilerOptions": {
    "target": "ES6",                        // Specify ECMAScript target version
    "module": "commonjs",                   // Specify module code generation
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports
    "skipLibCheck": true,                   // Skip type checking of declaration files
    "outDir": "./dist",                     // Redirect output structure to the directory
    "rootDir": "./src",                     // Specify the root directory of input files
    "resolveJsonModule": true,              // Include modules imported with .json extension
    "moduleResolution": "node",             // Specify module resolution strategy
    "typeRoots": ["./node_modules/@types"], // List of folders to include type definitions from
    "sourceMap": true                       // Create source map files for debugging
  },
  "include": ["src/**/*"],                   // Include all files in the src directory
  "exclude": ["node_modules", "dist"]        // Exclude node_modules and dist directories
}
